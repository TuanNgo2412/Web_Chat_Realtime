{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noPropertyAccessFromIndexSignature": false,
    "forceConsistentCasingInFileNames": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
